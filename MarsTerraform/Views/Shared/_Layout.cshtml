<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>M.T. - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body background="~/Content/boardgames.jpg">
    
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
        <img class="symbol" src="~/Content/images/mars.png" />
        @Html.ActionLink("Mars Terraformation", "Index", "Home", new { area = "" }, new { @class = "navbar-brand ml-2 mr-auto" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <footer class="fixed-bottom text-center bg-light">
            <p class="font-weight-light footer-text mt-3">&copy; @DateTime.Now.Year - Mars Terraformation Vault. Created by LosKogutos</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
    